{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./types",
    "declaration": true,
    "declarationMap": false,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./@types",
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./*.d.ts"
  ],
  "exclude": [
    "__tests__/**/*",
    "**/*.test.ts"
  ]
}