{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./types",
    "declaration": true,
    "declarationMap": false,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
    "paths": {
      "~": [
        "../../src"
      ],
      "~/*": [
        "../../src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./*.d.ts"
  ],
  "exclude": [
    "__tests__/**/*",
    "**/*.test.ts"
  ]
}