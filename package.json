    "postcss-preset-env": "8.3.2",
    "prettier": "2.8.7",
    "rimraf": "5.0.0",
    "tilg": "0.1.1",
    "typescript": "5.0.4",
    "windicss": "3.5.6",
    "windicss-webpack-plugin": "1.7.8",
    "zx": "7.2.1"
  },
  "resolutions": {
    "react-use": "17.4.0",
    "@types/react": "17.0.53"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  }
}
