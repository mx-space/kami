{
  "name": "mx-kami",
  "license": "GPL-3.0",
  "private": false,
  "version": "4.4.3",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "next-pwa",
        "next"
      ]
    }
  },
  "bump": {
    "before": [
      "git pull --rebase",
      "ni"
    ],
    "changelog": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ],
    "config.init.yaml": [
      "npm run gen-config && git add src/configs.default.ts"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "prebuild": "rimraf .next",
    "predev": "rimraf .next",
    "dev": "cross-env NODE_ENV=development next dev -p 2323",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production next build",
    "build:ci": "cross-env NODE_ENV=production CI=true next build",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js",
    "gen-config": "node scripts/generate-default-configs.js",
    "gen-jsonschema": "npx ts-json-schema-generator --path 'src/types/config.ts' --type 'KamiConfig' > json-schema.json",
    "bump:components": "bump -f ./packages/kami-design"
  },
  "browserslist": [
    "chrome >=94",
    "safari >=14",
    "last 2 Firefox versions"
  ],
  "dependencies": {
    "@floating-ui/react-dom": "1.3.0",
    "@formkit/auto-animate": "1.0.0-beta.6",
    "@mx-space/api-client": "1.3.5",
    "axios": "1.3.5",
    "clsx": "1.2.1",
    "css-spring": "4.1.0",
    "dayjs": "1.11.7",
    "devtools-detector": "2.0.14",
    "immer": "^10.0.0",
    "js-cookie": "3.0.4",
    "kami-design": "workspace:@mx-space/kami-design@*",
    "lodash-es": "4.17.21",
    "markdown-escape": "2.0.0",
    "markdown-to-jsx": "npm:@innei/markdown-to-jsx@7.1.3-beta.2",
    "medium-zoom": "1.0.8",
    "mermaid": "10.1.0",
    "next": "13.3.0",
    "next-seo": "6.0.0",
    "next-suspense": "0.2.3",
    "randomcolor": "0.6.2",
    "react": "18.2.0",
    "react-collapse": "5.1.1",
    "react-countup": "6.4.2",
    "react-dom": "18.2.0",
    "react-intersection-observer": "9.4.3",
    "react-masonry-css": "1.0.16",
    "react-message-popup": "1.1.3",
    "react-shortcut-guide": "1.0.0",
    "react-smooth-number-counter": "npm:@reactify-components/smooth-number-counter",
    "react-toastify": "9.1.2",
    "react-transition-group": "4.4.5",
    "react-use": "17.4.0",
    "remove-markdown": "0.5.0",
    "socket.io-client": "4.6.1",
    "swr": "2.1.3",
    "validator": "13.9.0",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@innei/eslint-config-react-ts": "0.9.8",
    "@innei/prettier": "0.9.8",
    "@next/bundle-analyzer": "13.3.1",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/inflection": "1.13.0",
    "@types/js-cookie": "3.0.3",
    "@types/lodash-es": "4.17.7",
    "@types/markdown-escape": "1.1.0",
    "@types/node": "18.16.0",
    "@types/randomcolor": "0.5.7",
    "@types/react": "17.0.53",
    "@types/react-collapse": "5.0.1",
    "@types/react-color": "3.0.6",
    "@types/react-dom": "18.0.11",
    "@types/react-transition-group": "4.4.5",
    "@types/remove-markdown": "0.3.1",
    "@types/ua-parser-js": "0.7.36",
