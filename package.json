    "windicss": "3.5.6",
    "windicss-webpack-plugin": "1.7.4",
    "zx": "7.0.7"
  },
  "resolutions": {
    "react-use": "17.4.0",
    "@types/react": "17.0.47"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  }
}