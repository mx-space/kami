{
  "name": "mx-kami",
  "license": "GPL-3.0",
  "private": false,
  "version": "3.13.1",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "next-pwa",
        "next"
      ]
    }
  },
  "bump": {
    "before": [
      "git pull --rebase",
      "ni"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ],
    "config.init.yaml": [
      "npm run gen-config && git add src/configs.default.ts"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "prebuild": "rimraf .next",
    "predev": "rimraf .next",
    "dev": "cross-env NODE_ENV=development next dev -p 2323",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production next build",
    "build:ci": "cross-env NODE_ENV=production CI=true next build",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js",
    "gen-config": "node scripts/generate-default-configs.js",
    "gen-jsonschema": "npx ts-json-schema-generator --path 'src/types/config.ts' --type 'KamiConfig' > json-schema.json"
  },
  "browserslist": [
    "chrome >=94",
    "safari >=14",
    "last 2 Firefox versions"
  ],
  "dependencies": {
    "@floating-ui/react-dom": "1.0.0",
    "@formkit/auto-animate": "1.0.0-beta.1",
    "@mx-space/api-client": "0.10.13",
    "axios": "0.27.2",
    "clsx": "1.2.1",
    "css-spring": "4.1.0",
    "dayjs": "1.11.4",
    "devtools-detector": "2.0.10",
    "js-cookie": "3.0.1",
    "lodash-es": "4.17.21",
    "markdown-escape": "1.1.0",
    "medium-zoom": "1.0.6",
    "mobx": "6.6.1",
    "mobx-react-lite": "3.4.0",
    "next": "12.2.2",
    "next-seo": "5.4.0",
    "next-suspense": "0.1.3",
    "randomcolor": "0.6.2",
    "react": "18.2.0",
    "react-countup": "6.3.0",
    "react-dom": "18.2.0",
    "react-intersection-observer": "9.3.5",
    "react-linkify": "1.0.0-alpha",
    "react-markdown": "4.3.1",
    "react-masonry-css": "1.0.16",
    "react-message-popup": "1.0.0-alpha.2",
    "react-shortcut-guide": "0.2.7",
    "react-smooth-number-counter": "https://github.com/Innei/react-smooth-number-counter.git",
    "react-toastify": "9.0.7",
    "react-transition-group": "4.4.2",
    "react-use": "17.4.0",
    "remove-markdown": "0.5.0",
    "socket.io-client": "4.5.1",
    "validator": "13.7.0"
  },
  "devDependencies": {
    "@innei/eslint-config-react-ts": "0.9.3",
    "@innei/prettier": "0.9.3",
    "@next/bundle-analyzer": "12.2.2",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/inflection": "1.13.0",
    "@types/js-cookie": "3.0.2",
    "@types/lodash-es": "4.17.6",
    "@types/markdown-escape": "1.1.0",
    "@types/node": "17.0.18",
    "@types/randomcolor": "0.5.6",
    "@types/react": "17.0.47",
    "@types/react-color": "3.0.6",
    "@types/react-dom": "18.0.6",
    "@types/react-transition-group": "4.4.5",
    "@types/remove-markdown": "0.3.1",
    "@types/ua-parser-js": "0.7.36",
    "@types/validator": "13.7.4",
    "cross-env": "*",
    "dotenv": "16.0.1",
    "eslint": "*",
    "husky": "8.0.1",
    "js-yaml": "*",
    "lint-staged": "13.0.3",
    "next-compose-plugins": "2.2.1",
